            if (obj.checked) {
                password1.type = "text";
            }else{
                password1.type = "password";
            }
        }
        function ShowPass2(obj) {
            if (obj.checked) {
                password2.type = "text";
            }else{
                password2.type = "password";
            }
        }
    </script>

