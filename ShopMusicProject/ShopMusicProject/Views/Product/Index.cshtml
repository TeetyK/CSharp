@{

}
@model IEnumerable<ShopMusicProject.Models.Product>

<div class="">

    @ViewBag.ErrorMessage
<div class="table-responsive w-100">
    <table class="table table-striped text-center">
        <thead>
                <tr style="background-color : #3c373e;color :  white">
                <th scope="col">id</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Stock</th>
                <th scope="col">Cost</th>
                <th scope="col">LastBuy</th>
                <th scope="col">LastSale</th>
                <th scope="col">BrandId</th>
                <th scope="col">CatagoryId</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                    <tr scope="row" class="text-center">
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Stock</td>
                        <td>@item.Cost</td>
                        <td>@item.LastbuyAt</td>
                        <td>@item.LastsaleAt</td>
                        <td>@item.Brandid</td>
                        <td>@item.Catid</td>
                        <td><a class="btn btn-warning" asp-action="edit" asp-controller="product" asp-route-pdid="@item.Id">แก้ไข</a></td>
                        <td><a class="btn btn-close" asp-action="delete" asp-controller="product" asp-route-pdid="@item.Id"></a></td>
                    </tr>
                }
                <tr class="text-center">
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td class="text-end">
                        <a class="btn btn-outline-success" asp-action="Create" asp-controller="Product">เพิ่ม</a>
                        </td>
                </tr>
           
        </tbody>
    </table>
        <div class="">
                @if (ViewBag.CurrentPage > 1)
                {
                @Html.ActionLink("Previous", "Index", new { page = ViewBag.CurrentPage - 1 }, new { @class = "btn btn-secondary" })
                }
                
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    if (i == ViewBag.CurrentPage)
                    {
                        <span class="btn btn-secondary">@i</span>
                    }
                    else
                    {
                    @Html.ActionLink(i.ToString(), "Index", new { page = i }, new { @class = "btn btn-secondary" })
                    }
                }

                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                @Html.ActionLink("Next", "Index", new { page = ViewBag.CurrentPage + 1 }, new { @class = "btn btn-secondary" })
                }
              
        </div>
</div>
</div>
   